
<resources>

    <!-- Base application theme. -->



    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/trimble_header_blue</item>
    </style>

    <style name="ShadowTextWhite">
        <item name="android:textColor">@color/trimble_text_white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="ShadowTextRed">
        <item name="android:textColor">@color/trimble_text_red</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="ShadowTextYellow">
        <item name="android:textColor">@color/trimble_text_yellow</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="ShadowTextBlue">
        <item name="android:textColor">@color/trimble_text_blue</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="TrimbleRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio</item>
    </style>

    <!-- ActionBar theme -->
    <style name="TrimbleActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/trimble_text_white</item>
    </style>

    <!-- AlertDialog theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- button bar button style (as opposed to the bar style itself) -->
        <item name="buttonBarButtonStyle">@style/AlertDialogButtonBarButtonStyle</item>

        <!-- button text color -->
        <item name="colorAccent">@color/trimble_text_white</item>

        <!-- dialog background color -->
        <item name="android:background">@color/trimble_dialog_background_gray</item>

        <!-- title text color -->
        <item name="android:textColor">@android:color/holo_blue_light</item>

        <!-- message text color -->
        <item name="android:textColorPrimary">@color/trimble_text_white</item>
    </style>

    <!-- Button Bar Button Style for Alert Dialogs-->
    <style name="AlertDialogButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@drawable/alert_dialog_button_selector</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Card view  Style for VLB  Dialog-->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!-- Bluetooth Device List Title Bar -->
    <style name="BluetoothDeviceListTheme" parent="android:Theme.Dialog">
        <item name="android:windowTitleSize">32dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/BluetoothDeviceWindowTitleBackground</item>
    </style>
    <style name="BluetoothDeviceWindowTitleBackground">
        <item name="android:background">@color/trimble_header_blue</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MySplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppNavTheme" parent="Theme.AppCompat">
       <item name="colorPrimary">@color/colorPrimary</item>
       <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
       <item name="colorAccent">@color/colorAccent</item>
   </style>

</resources>
